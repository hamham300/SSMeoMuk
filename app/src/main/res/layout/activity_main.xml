<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/splash_logo2"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/btn_back"
        android:padding="0sp"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"

        android:text="메뉴"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_white_round"/>

    <Button
        android:id="@+id/btn_price"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="420dp"

        android:text="가격"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_white_round"/>

    <LinearLayout
        android:id="@+id/price_select_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible"
        android:background="@color/colorWhite">>

        <Button
            android:id="@+id/btn_under5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:text="~5000"
            android:textSize="20sp"
            android:background="@drawable/btn_white_round"/>

        <Button
            android:id="@+id/btn_5to6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"

            android:text="5000~6000"
            android:textSize="20sp"
            android:background="@drawable/btn_white_round"/>

        <Button
            android:id="@+id/btn_6to7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"

            android:text="6000~7000"
            android:textSize="20sp"
            android:background="@drawable/btn_white_round"/>

        <Button
            android:id="@+id/btn_over7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"

            android:text="7000~"
            android:textSize="20sp"
            android:background="@drawable/btn_white_round"/>

    </LinearLayout>

    <GridView
        android:id="@+id/menu_select_gridView"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_height="500dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite">

    </GridView>

    <Button
        android:id="@+id/test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="60dp"

        android:text="Log in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/btn_white_round"/>


</androidx.constraintlayout.widget.ConstraintLayout>